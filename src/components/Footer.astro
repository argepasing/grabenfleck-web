---
const package_version = import.meta.env.PACKAGE_VERSION;
const git_commit_hash = import.meta.env.COMMIT_REF;
const now = new Date();
const current_year = now.getFullYear();
const build_date = now.toLocaleString("de-DE", {
  day: "2-digit",
  month: "2-digit",
  year: "numeric",
  hour: "2-digit",
  minute: "2-digit",
  second: "2-digit",
  timeZone: "Europe/Berlin",
});
---

<div class="mt-10 border-t-4 border-green-600 bg-green-50">
  <footer class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8">
    <!-- Grid -->
    <div class="mb-10 grid grid-cols-2 gap-6 md:grid-cols-4 lg:grid-cols-5">
      <div class="col-span-full hidden lg:col-span-1 lg:block">
        <a href="/" class="focus:outline-none">
          <div class="mb-2">
            <img src="/images/uploads/logo-schuetzen-vektor.svg" alt="Logo der SG Grabenfleck e.V." class="w-[130px] pl-6" />
          </div>
          <h2 class="block cursor-pointer text-xl font-medium tracking-tighter text-black">
            SG Grabenfleck e.V.
            <small class="block whitespace-nowrap text-sm font-light text-gray-500">München-Pasing</small>
          </h2>
        </a>
      </div>
      <!-- End Col -->

      <div>
        <h4 class="text-xs font-semibold uppercase text-gray-900">Disziplinen</h4>

        <div class="mt-3 grid space-y-3 text-sm">
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/bogen/">Bogen</a></p>
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/luftgewehr/">Luftgewehr</a></p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/luftpistole/">Luftpistole</a>
          </p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/lichtgewehr-pistole/">Lichtgewehr- /pistole</a>
          </p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/behindertensport/">Behindertensport</a>
          </p>
        </div>
      </div>
      <!-- End Col -->

      <div>
        <h4 class="text-xs font-semibold uppercase text-gray-900">Verein</h4>

        <div class="mt-3 grid space-y-3 text-sm">
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/aktuelles/">Aktuelles</a></p>
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/ueber-uns/">Über uns</a></p>
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/tradition/">Tradition</a></p>
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/vorstand/">Vorstand</a></p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/mitgliedschaft/">Mitgliedschaft</a>
            <span class="inline text-green-700">— Schnupper rein</span>
          </p>
        </div>
      </div>
      <!-- End Col -->

      <div>
        <h4 class="text-xs font-semibold uppercase text-gray-900">Sport</h4>

        <div class="mt-3 grid space-y-3 text-sm">
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/training/">Training</a></p>
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/jugend/">Jugend</a></p>
          <p><a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/wettkampf/">Wettkampf</a></p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/wettkampf/#lp-1---münchenliga">LP 1 - Münchenliga</a>
          </p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/wettkampf/#lg-1---münchenliga">LG 1 - Münchenliga</a>
          </p>
        </div>
      </div>
      <!-- End Col -->

      <div>
        <h4 class="text-xs font-semibold uppercase text-gray-900">Kontakt</h4>

        <div class="mt-3 grid space-y-3 text-sm">
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/kontakt/#adresse-vereinsheim">Vereinsheim</a>
          </p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/kontakt/#adresse-bogenplatz">Bogenplatz</a>
          </p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/kontakt/#adresse-turnhalle">Turnhalle</a>
          </p>
          <p>
            <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800" href="/kontakt/#probetraining">Probetraining</a>
            <span class="inline text-green-700">— Trau dich</span>
          </p>
        </div>

        <h4 class="mt-12 text-xs font-semibold uppercase text-gray-900">Gefördert</h4>

        <div class="mt-3 grid space-y-3 text-sm">
          <p>
            <a
              class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800"
              target="_blank"
              href="https://stadt.muenchen.de/infos/portrait-referat-bildung-sport.html"
            >
              <img
                class="-ml-9 mt-1"
                src="/images/uploads/referat-bildung-sport.svg"
                title="Landeshauptstadt München - Referat für Bildung und Sport"
                alt="Landeshauptstadt München - Referat für Bildung und Sport"
              />
            </a>
          </p>
        </div>
      </div>
      <!-- End Col -->
    </div>
    <!-- End Grid -->

    <div class="mt-5 border-t border-green-200 pt-5">
      <div class="flex items-center justify-between">
        <div class="space-x-4 text-sm">
          <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800 hover:underline" href="/impressum/">Impressum</a>
          <a class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800 hover:underline" href="/datenschutz/">Datenschutz</a>
        </div>

        <div class="flex items-center justify-between">
          <div class="space-x-4">
            <p title={`${build_date} • ${package_version} • ${git_commit_hash.substring(0, 7)}`} class="text-xs opacity-50">
              © {current_year} • {package_version}
            </p>
            <!-- Social Brands currently disabled -->
            <!-- <a class="inline-block text-gray-500 hover:text-gray-800" href="#!">
              <i class="bi bi-twitter-x"></i>
            </a> -->
            <!-- <a class="inline-block text-gray-500 hover:text-gray-800" href="#!">
              <i class="bi bi-instagram"></i>
            </a> -->
            <!-- <a class="inline-block text-gray-500 hover:text-gray-800" href="#!">
              <i class="bi bi-facebook"></i>
            </a> -->
            <!-- End Social Brands -->
          </div>
        </div>
        <!-- End Col -->

        <div class="hidden sm:block lg:hidden">
          <a class="flex-none text-sm font-semibold" href="/" aria-label="Brand">SG Grabenfleck e.V.</a>
        </div>
      </div>
    </div>
  </footer>
</div>
