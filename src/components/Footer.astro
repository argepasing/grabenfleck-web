---
const package_version = import.meta.env.PACKAGE_VERSION;
const git_commit_hash = import.meta.env.COMMIT_REF;
---

<footer
  class="text-blueGray-700 transform bg-white transition duration-500 ease-in-out"
>
  <div class="flex flex-col flex-wrap justify-center p-5 md:flex-row">
    <nav
      class="nprd mx-auto mb-6 flex w-full flex-wrap items-center justify-center text-base"
    >
      <a href="/impressum/" class="navbar-item">Impressum</a>
      <a href="/datenschutz/" class="navbar-item">Datenschutzerklährung</a>
    </nav>
    <span
      class="mx-auto mr-2 mt-2 inline-flex w-full justify-center sm:ml-auto sm:mt-0"
    >
      <a class="text-green-500 hover:text-green-800">
        <svg
          fill="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          class="h-5 w-5"
          viewBox="0 0 24 24"
        >
          <path
            d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"
          ></path>
        </svg>
      </a>
      <a class="ml-3 text-green-500 hover:text-green-800">
        <svg
          fill="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          class="h-5 w-5"
          viewBox="0 0 24 24"
        >
          <path
            d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
          ></path>
        </svg>
      </a>
      <a class="ml-3 text-green-500 hover:text-green-800">
        <svg
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          class="h-5 w-5"
          viewBox="0 0 24 24"
        >
          <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01"
          ></path>
        </svg>
      </a>
    </span>
  </div>
  <div class="bg-blueGray-50 mt-4 w-full rounded-b-lg px-8">
    <div
      class="container mx-auto inline-flex flex-col flex-wrap items-center px-5 py-6 sm:flex-row"
    >
      <p
        title={`${package_version} • ${git_commit_hash.substring(0, 7)}`}
        class="mx-auto text-center text-sm text-black sm:text-left"
      >
        © 2023 • {package_version}
      </p>
    </div>
  </div>
</footer>
