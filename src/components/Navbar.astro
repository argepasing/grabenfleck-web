---
const currentPath = Astro.url.pathname;
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu } from "astro-navbar";
---

<header transition:persist class="text-blueGray-700 transform bg-white py-3 transition duration-500 ease-in-out">
  <Astronav>
    <div class="flex w-full justify-between justify-items-center">
      <a href="/" class="pr-2 focus:outline-none lg:px-6 lg:pr-8">
        <div class="inline-flex items-center">
          <div class="flex w-14 text-5xl">üèπ</div>
          <h2
            class="hover:text-blueGray-500 lg:text-x block transform cursor-pointer whitespace-nowrap p-2 text-xl font-medium tracking-tighter text-black transition duration-500 ease-in-out lg:mr-8"
          >
            SG Grabenfleck e.V.
            <small class="block text-sm font-light text-gray-500">M√ºnchen-Pasing</small>
          </h2>
        </div>
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="h-6 w-6 text-gray-800" />
      </div>
      <MenuItems class="lg:flex">
        <ul class="flex flex-col items-center justify-center lg:flex-row lg:gap-3" data-current-path={currentPath}>
          <li><a href="/ueber-uns/" class="navbar-item {currentPath === '/ueber-uns' ? 'active' : ''}">√úber uns</a></li>
          <li><a href="/tradition/" class="navbar-item {currentPath === '/tradition' ? 'active' : ''}">Tradition</a></li>
          <li>
            <Dropdown class="group">
              <button class="flex items-center">
                <span>Disziplinen</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="ml-2 h-3 w-3 group-open:rotate-180"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div
                  class="absolute top-0 mt-2 w-56 origin-top-right divide-y divide-gray-100 rounded-md border border-gray-200 bg-white py-1 shadow-lg outline-none"
                >
                  <ul>
                    <li>
                      <a
                        href="/bogen/"
                        class="flex w-full justify-between px-4 py-2 text-left text-sm leading-5 text-gray-700 hover:bg-slate-100 focus-visible:outline-1 focus-visible:outline-blue-500"
                        >Bogen</a
                      >
                    </li>
                    <li>
                      <a
                        href="/luftgewehr/"
                        class="flex w-full justify-between px-4 py-2 text-left text-sm leading-5 text-gray-700 hover:bg-slate-100 focus-visible:outline-1 focus-visible:outline-blue-500"
                        >Luftgewehr</a
                      >
                    </li>
                    <li>
                      <a
                        href="/luftpistole/"
                        class="flex w-full justify-between px-4 py-2 text-left text-sm leading-5 text-gray-700 hover:bg-slate-100 focus-visible:outline-1 focus-visible:outline-blue-500"
                        >Luftpistole</a
                      >
                    </li>
                    <li>
                      <a
                        href="/lichtgewehr-pistole/"
                        class="flex w-full justify-between px-4 py-2 text-left text-sm leading-5 text-gray-700 hover:bg-slate-100 focus-visible:outline-1 focus-visible:outline-blue-500"
                        >Lichtgewehr- /pistole</a
                      >
                    </li>
                    <li>
                      <a
                        href="/behindertensport/"
                        class="flex w-full justify-between px-4 py-2 text-left text-sm leading-5 text-gray-700 hover:bg-slate-100 focus-visible:outline-1 focus-visible:outline-blue-500"
                        >Behindertensport</a
                      >
                    </li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li><a href="/training/" class="navbar-item {currentPath === '/training' ? 'active' : ''}">Training</a></li>
          <li><a href="/wettkampf/" class="navbar-item {currentPath === '/wettkampf' ? 'active' : ''}">Wettkampf</a></li>
          <li><a href="/jugend/" class="navbar-item {currentPath === '/jugend' ? 'active' : ''}">Jugend</a></li>
          <li><a href="/vorstand/" class="navbar-item {currentPath === '/vorstand' ? 'active' : ''}">Vorstand</a></li>
          <li><a href="/mitgliedschaft/" class="navbar-item {currentPath === '/mitgliedschaft' ? 'active' : ''}">Mitgliedschaft</a></li>
          <li><a href="/kontakt/" class="navbar-item {currentPath === '/kontakt' ? 'active' : ''}">Kontakt</a></li>
        </ul>
      </MenuItems>
    </div>
  </Astronav>
</header>
